{
  "name": "nextjs-fastify",
  "version": "1.0.0",
  "description": "Next.js server setup with Fastify",
  "private": true,
  "main": "build/server.mjs",
  "scripts": {
    "build": "concurrently \"npm:build:fastify\" \"npm:build:nextjs\"",
    "build:fastify": "vite build --outDir build --ssr src/server.ts",
    "build:nextjs": "cd ./src/nextjs-app && npm run build",
    "format": "prettier --config .prettierrc \"src/**/*.{js,json,ts,css,scss,vue,html,md}\" --write",
    "start": "pnpm run build && node build/server.mjs",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "env-schema": "^5.1.1",
    "fastify": "^4.10.0",
    "next": "^14.2.5",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@vitest/coverage-c8": "^0.25.2",
    "@vitest/ui": "^0.25.2",
    "c8": "^7.12.0",
    "concurrently": "^8.2.2",
    "jsdom": "^20.0.2",
    "prettier": "^3.3.2",
    "vite": "^3.2.4",
    "vitest": "^0.25.2"
  }
}
